@import 'nib'
@import '_settings'
@import '_fonts'

blue = #78BAE2
bordersize = 2px
borderdist = -10px
bordertopoffset = 115px
maxwidth = 1200px
global-reset()

html
    width 100%
    height 100% !important

body
    width 100%
    height 100%
    color white
    font-family DIN
    font-weight 200
    font-size 22px
    line-height 1.4
    background-image url(../img/pic1_blur.jpg)
    background-size 100% 100%

a
    text-decoration none

    &:hover
        border-bottom 1px solid blue

strong
    font-weight 500


#wrapper
    position relative
    max-width 1200px
    margin 0px auto

p
    margin 19px 0

h1,h2,h3,h4,h5,h6
    font-weight normal
h1
    font-family: Clarendon;
    font-size: 102px;
    text-shadow: 1px 2px 0px #000000;
    margin-bottom: 0

h2
    font-family: DIN
    font-weight 200
    font-size: 56px
    margin .5em 0
    

h3
    font-family: DIN 
    font-weight 200
    font-size: 34px
    margin-top: 0

h1 + h3
    margin-top: 15px

h4
    font-family Clarendon
    font-size 40px
    margin .5em 0
    text-transform uppercase

.black
    color #333

.blue
    color blue

.white
    color white

.wrap, header 
    max-width maxwidth
    margin 0px auto

.content
    max-width 900px

.upper
    text-transform uppercase

.small
    font-family DIN
    font-size 18px

.sans-serif
    font-family DIN
    font-weight 400

.sans-serif-thin
    font-family DIN
    font-weight 200

.serif
    font-family Clarendon

.center
    margin 0px auto
    text-align center

.pull-left
    display inline
    float left

.pull-right
    display inline
    float right

.pull-bottom
    position absolute
    bottom 0

    &.pull-right
        right 0

    &.pull-left
        left 0

    &.center
        left 0
        right 0

.vertical-align
    position absolute
    top 0
    bottom 0
    margin auto

    &.pull-right
        right 0

    &.pull-left
        left 0

    &.center
        left 0
        right 0
        text-align center

#title
    margin auto
    margin-bottom 15px
    padding-top 75px
    font-size 75px
    color white

#subtitle
    font-size 50px

#actions
    list-style-type decimal
    font-size 40px
    margin-left 20px
    margin-top 50px
    font-weight 400
    li
        font-weight 200
        margin-left 100px
        margin-bottom 25px

.button
    display inline-block
    width 100%
    height 50px
    margin 25px
    padding 25px
    border-radius 10px
    color white
    font-size 22px
    text-align center
    vertical-align center
    background-color white
    
    i
        display block
        text-align left
        font-size 1.5em
        padding 10px
        padding-right 15px
        border-right 2px solid white
        width 13%
        float left

    span
        display block
        padding 10px
        padding-top 12px
        padding-left 25px
        margin-left 16%
        text-align center

    &:hover
        text-decoration none
        border-bottom none

.button-container
    display block
    margin auto
    width auto
    text-align center

#eventButton
    background-color #78BAE2
    width 370px

    &:hover
        background-color #588AB2

#tweet
    background-color #4099ff
    width 200px

    i
        padding-right 15px

    &:hover
        background-color #1068df

#share
    background-color #3b5998
    width 200px

    i
        padding-right 10px

    &:hover
        background-color #0b2968



@import '_mq'
